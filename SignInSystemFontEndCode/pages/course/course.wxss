/* pages/course/course.wxss */
.container{
  width: 100%;
  height: 100%;
}

.img_course{
  width: 100%;
  /* height: 555px */
}

.weekBar{
  width: 100%;
  height: 70rpx;
  background-color: yellowgreen;
  display: flex;
  align-items: center;
  justify-content: center;
}

.weekSelect{
  display: flex;
  font-size: 35rpx;
  font-weight: bold;
  color: #515151;
}

.arrow_down{
  height: 25rpx;
  width: 30rpx;
}

.course_add{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 680rpx;
}

.schedule_top{
  height: 70rpx;
  display: flex;
  background-color: yellow;
  align-items: center;
  font-size: 30rpx;
  margin-left: 100rpx;
  justify-content: center;
  font-weight: bold;
}

.schedule_top_1{
  width: 90rpx;
  
}

.schedule_left{
  width: 100rpx;
  background-color: peachpuff;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  flex-wrap:wrap;
}

.schedule_time{
  font-size: 20rpx;
  font-weight: normal;
  color: darkgray;
}

.session_array{
  font-size: 30rpx;
  font-weight: bold;
  align-self: center;
}

.schedule_line{
  width: 750rpx;
  position: absolute;
  top:140rpx; 
}

.schedule_content{
  position: absolute;
  top:140rpx;
  left: 100rpx;
  background-color: red;
  font-size: 15rpx;
}